#include "fsm_simplebutton.h"

void fsm_simple_button_run(){
	switch(status){
	case INIT:
		clearScreen();
		status = STATE1;
		setTimer(10000);
		break;
	case STATE1:
		//clearScreen();
		display7SEG(5);
		if (timer_flag == 1){
			status = STATE3;
			setTimer(10000);
		}
		if (isButtonPressed(1)){
			status = STATE2;
			//value++;
			setTimer(10000);
		}
		break;
	case STATE2:
		display7SEG(6);
				if (timer_flag == 1){
					status = STATE3;
					setTimer(10000);
				}
				if (isButtonPressed(1)){
					status = STATE1;
					//value++;
					setTimer(10000);
				}
		break;
	case STATE3:

		break;
	default: break;
	}

}
